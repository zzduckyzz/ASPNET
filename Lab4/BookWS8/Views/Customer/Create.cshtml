@model BookWS8.Models.CustomerModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CustomerModel</h4>
<hr />
<script type="text/javascript">
    function validateForm() {
        
        var isValidForm = true;
        var nameValue = document.getElementById("Name").value;
        var emailValue = document.getElementById("EmailId").value;

        //Validate the class field
        if (nameValue == null || nameValue == "") {
            document.getElementById("validationName")
                .textContent = "Customer Name is required.";
            isValidForm = false;
        }
        //validate the class field
        if (emailValue == null || emailValue == "") {
            document.getElementById("validationEmail")
                .textContent = "Customer Email is required.";
            isValidForm = false;
        }

        return isValidForm;
    }
</script>
<div class="row">
    <div class="col-md-4">
        <form method="post" onsubmit="return validateForm()">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" id="Name" />
                <span id="validationName" asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailId" class="control-label"></label>
                <input asp-for="EmailId" class="form-control" id="EmailId"/>
                <span id="validationEmail" asp-validation-for="EmailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
